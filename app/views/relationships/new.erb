<div class="jumbotron">
	<h1 class="text-center"><small>New Relationship for <%= @contact.whole_name %></small></h1>
	<div class="container">
		<div class="row">
			<div class="col-lg-4 col-lg-offset-4 text-center">
				<form class="form-horizontal" action="/contacts/<%= @contact.id %>/relationships/new" method="post">
					<div class="form-group form-group-lg">
						<select class="form-control" name="relationship[contact2]">
							<% @contacts.each do |contact| %>
								<option value="<%= contact.id %>"><%= contact.first_name %> <%= contact.last_name %></option>
							<% end %>
						</select>
					</div>
					<div class="form-group form-group-lg">
						<input class="form-control" required type="text" placeholder="Relationship type" name="relationship[relationship_type]">
					</div>
					<input type="hidden" name="relationship[contact1]" value="<%= @contact.id %>">
					<button type="submit" class="btn btn-primary btn-lg ">Create</button>
				</form>
			</div>
		</div>
	</div>
</div>
