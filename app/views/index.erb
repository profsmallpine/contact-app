<div class="jumbotron">
	<h1 class="text-center">Welcome to Contact App 2.0</h1>
	<h1 class="text-center"><small>add a contact</small></h1>
	<div class="container">
		<div class="row">
			<div class="col-lg-8 col-lg-offset-2 text-center">
				<form class="form-inline" action="/contacts/create" method="post">
					<div class="form-group form-group-lg">
						<input class="form-control" required type="text" placeholder="First name" name="contact[first_name]">
					</div>
					<div class="form-group form-group-lg">
						<input class="form-control" required type="text" placeholder="Last name" name="contact[last_name]"><br>
					</div>
					<button type="submit" class="btn btn-primary btn-lg ">Create</button>
				</form>
			</div>
		</div>
	</div>
</div>
