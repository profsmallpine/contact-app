<h3>New Phone Number for <%= @contact.first_name %> <%= @contact.last_name %></h3>

<% unless @errors.nil? %>
	<% @errors[:number].each do |error| %>
	<p><%= error %></p>
	<% end %>
<% end %>

<form action="/contacts/<%= @contact.id %>/phone_numbers/new" method="post">
	<input required type="text" placeholder="Number, ex. 555-555-5555" name="phone_number[number]" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"><br>
	<select name="phone_number[number_type]">
		<%= erb :'partials/_number_types_new' %>
	</select><br>
	<input type="submit" value="Create">
</form>