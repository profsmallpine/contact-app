<div class="jumbotron">
	<h1 class="text-center"><small>New Company for <%= @contact.whole_name %></small></h1>
	<div class="container">
		<div class="row">
			<div class="col-lg-4 col-lg-offset-4 text-center">
				<form class="form-horizontal" action="/contacts/<%= @contact.id %>/companies/new" method="post">
					<div class="form-group form-group-lg">
						<input class="form-control" required type="text" placeholder="Company name" name="company[name]">
					</div>
					<div class="form-group form-group-lg">
						<input class="form-control" required type="text" placeholder="Job title" name="company[position]"><br>
					</div>
					<div class="input-group form-group-lg">
						<span class="input-group-addon">Parent Company</span>
						<select class="form-control" name="company[sister_company_id]">
							<option value="">None</option>
							<% @companies.each do |company| %>
								<option value="<%= company.id %>"><%= company.name %></option>
							<% end %>
						</select>
					</div><br>
					<button type="submit" class="btn btn-primary btn-lg ">Create</button>
				</form>
			</div>
		</div>
	</div>
</div>
