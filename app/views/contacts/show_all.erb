<div class="jumbotron">
	<h1 class="text-center">Contacts</h1>
	<div class="container">
		<div class="row">
			<div class="col-lg-8 col-lg-offset-2 text-center">
				<% if !@contacts.nil? %>
					<% @contacts.each do |contact| %>
						<div class="alert alert-info" role="alert">		
								<form class="inline-form" onsubmit="return confirm('Are you sure you want to delete?');" method="post" action="/contacts/<%= contact.id %>/destroy">
									<h3 class="strong-body"><a href="/contacts/<%= contact.id %>/edit"><%= contact.whole_name %></a>
    							<input type="hidden" name="_method" value="delete">
    							<button class="btn btn-danger" type="submit">Delete</button>
								</form>
							</h3>
						</div>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
</div>
